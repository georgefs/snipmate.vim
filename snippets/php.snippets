
snippet #!
	#!/usr/bin/env php

snippet docs
	/*
	  *File: ${1:`Filename('$1.py', 'foo.py')`}
	  *  *Author: ${2:`g:snips_author`}
	  *  *Description: ${3}
	*/
snippet if
	if(${1:condition})
	{
		${2:do}
	}

snippet else
	else
	{
		${1:do}
	}
snippet elif
	else if (${1:condition})
	{
		${2:do}
	}
snippet print
	echo ${1};

snippet func
	function ${1:name}(${2:args}){
		${3:code}
	}

snippet class
	class ${1:ClassName}
	{
		${2}
		function ${3:__construct}(${4:argument})
		{
			${5:// code...}
		}
	}


snippet for
	for ($${2:i} = 0; $$2 < ${1:count}; $$2${3:++}) {
		${4: // code...}
	}

snippet wh
	while (${1:/* condition */}) {
		${2:// code...}
	}


snippet try
	try{
		${1:do some thing}
	}catch(${3:Exception} ${3:name}){
		${4:exception do}
	}
snippet raise
	throw new ${1:Exception($error);}
	

